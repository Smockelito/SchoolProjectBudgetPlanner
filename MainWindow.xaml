<Window x:Class="ProjektuppgiftBudgetplanerare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:ProjektuppgiftBudgetplanerare.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:TransactionsViewModel}"
        mc:Ignorable="d"
        Title="Budgetplanerare" Height="650" Width="980">
    <!-- Resources-->
    <Window.Resources>
        <CollectionViewSource x:Key="TransactionView"
                              Source="{Binding MonthTransactions}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="IsIncome"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <DataTemplate x:Key="IncomeExpenseGroupHeaderTemplate">
            <Border Padding="6" Margin="0,8,0,4" Background="#EEE" CornerRadius="6">
                <TextBlock FontSize="15" FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Utgifter"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Name}" Value="True">
                                    <Setter Property="Text" Value="Inkomster"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Fönstret-->
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Top left - Rubrik-->
        <Border Padding="12" CornerRadius="10" Background="#F6F6F6">
            <TextBlock Text="Budgetplanerare"
                       FontSize="38"
                       FontFamily="Forte"
                       VerticalAlignment="Center"/>
        </Border>
        

        <!-- Top right - Årsinkomst -->
        <Border Grid.Column="1" Padding="12" CornerRadius="10" Background="#F6F6F6">
            <StackPanel HorizontalAlignment="Right">
                <TextBlock Text="Total årsinkomst"
                           Padding="2"
                           FontSize="16"
                           Opacity="0.75"
                           HorizontalAlignment="Right"/>
                <TextBlock Text="{Binding AnnualIncome, StringFormat={}{0:N0} kr}"
                           FontSize="24"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Bottom left - Månadslistning -->
        <Border Grid.Row="1" Padding="12" CornerRadius="10" Background="#FFFFFF" BorderBrush="Aquamarine"  BorderThickness="1" Margin="0,12,12,0">
            <DockPanel>
                <!-- Månadsväljare -->
                <StackPanel DockPanel.Dock="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="◀"
                                Width="30"
                                Height="30"
                                Command="{Binding PrevMonthCommand}"
                                HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding SelectedMonth, StringFormat={}{0:MMMM yyyy}}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="2" 
                                Content="▶"
                                Width="30" 
                                Height="30"
                                Command="{Binding NextMonthCommand}"
                                HorizontalAlignment="Right"/>

                    </Grid>
                </StackPanel>

                <!-- Kvar av månaden + ta bort post -->
                <Grid DockPanel.Dock="Bottom" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <TextBlock Text="Kvar av månaden" Opacity="0.7"/>
                        <TextBlock Text="{Binding MonthRemaining, StringFormat={}{0:N0} kr}"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Content="Ta bort markerad"
                            Command="{Binding DeleteCommand}"
                            Padding="10,6"
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- Lista inkomster/utgifter -->
                <ListView ItemsSource="{Binding Source={StaticResource TransactionView}}"
                          SelectedItem="{Binding SelectedTransaction}">

                    <ListView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource IncomeExpenseGroupHeaderTemplate}">
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>
                        </GroupStyle>
                    </ListView.GroupStyle>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="ToolTip">
                                <Setter.Value>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" Opacity="0.8" TextWrapping="Wrap" MaxWidth="260"/>
                                        <TextBlock Text="{Binding Recurrence}" Opacity="0.7"/>
                                    </StackPanel>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Kategori" DisplayMemberBinding="{Binding Category}" Width="220"/>
                            <GridViewColumn Header="Belopp" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Amount, StringFormat={}{0:N0} kr}"
                                                   HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </DockPanel>
        </Border>

        <!-- Bottom right - Lägg till transaktion -->
        <Border Grid.Row="1" Grid.Column="1" Padding="12" CornerRadius="10" Background="#FFFFFF" BorderBrush="Aquamarine"  BorderThickness="1" Margin="0,12,12,0">
            <StackPanel>
                <TextBlock Text="Ny transaktion" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Typ:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Content="{Binding TransactionTypeText}"
                            Command="{Binding ToggleTypeCommand}"
                            Padding="10,6"/>
                </StackPanel>

                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Kategori:" VerticalAlignment="Center"/>
                    <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding NewTransaction.Category, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Belopp:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding NewTransaction.Amount, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Datum:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding NewTransaction.Date}" Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Upprepning:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <ComboBox Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding RecurrenceValues}"
                              SelectedItem="{Binding NewTransaction.Recurrence}"
                              Margin="0,8,0,0"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Beskrivning:" VerticalAlignment="Top" Margin="0,8,0,0"/>
                    <TextBox   Grid.Row="4" Grid.Column="1"
                              Text="{Binding NewTransaction.Description, UpdateSourceTrigger=PropertyChanged}"
                              Margin="0,8,0,0"
                              Height="80"
                              AcceptsReturn="True"
                              TextWrapping="Wrap"/>
                </Grid>

                <Button Content="Spara transaktion"
                        Command="{Binding AddCommand}"
                        Padding="12,8"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
